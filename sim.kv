<LoginScreen>:
    name: 'Login'
    btnLogin_ : btnLogin
    txtUsername_ : txtUsername
    txtPassword_ : txtPassword

    MDLabel:
        text: "Login"
        pos_hint: {"center_y": .85}
        font_style: "H3"
        halign: "center"
        theme_text_color: "Custom"
        text_color: 0, 0, 0, 1
    MDLabel:
        text: "Welcome to Perpustakaan Online"
        pos_hint: {"center_y": .75}
        font_style: "H5"
        halign: "center"
        theme_text_color: "Custom"
        text_color: 0, 0, 0, 1

    MDTextField:
        id: txtUsername
        hint_text: "Username"
        pos_hint: {"center_x": .5, "center_y": .6}
