        pos_hint: {"center_x": .5, "center_y": .3}
        on_press: root.doLogin()

    MDRectangleFlatButton:
        text: 'Signup'
        pos_hint: {'center_x':0.5,'center_y':0.2}
        on_press: root.manager.current = 'Signup'

